<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="character"
            type="dam.pmdm.tarea2jcpf.CharacterData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xl"
        android:layout_marginVertical="@dimen/s"
        android:layout_marginHorizontal="@dimen/s">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/s">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/l"
                android:layout_height="@dimen/xl"
                android:layout_margin="@dimen/s"
                android:contentDescription="@string/imagen_del_personaje"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    style="@style/fontSizeName"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:typeface="normal" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>